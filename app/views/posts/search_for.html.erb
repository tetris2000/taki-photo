<div class="text-center mb-4">
  <h1>写真を検索する</h1>
</div>
  
<div class="row">
  <div class="col-xl-6 col-lg-8 offset-xl-3 offset-lg-2">
     
    <%= form_with(scope: :search_post, url: search_posts_path, method: :get, local: true) do |f| %>
      
      <div class="form-group row">
        <%= f.label :prefecture_id, "撮影場所", class: "col-sm-4 col-form-label" %>
        <div class="col-sm-8">
          <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, {prompt: "↓都道府県を選択"}, {class: "form-control"} %>
        </div>
      </div>
      
      <div class="form-group row">
        <%= f.label :waterfall, "滝の名称", class: "col-sm-4 col-form-label" %>
        <div class="col-sm-8">
          <%= f.text_field :waterfall, class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group row">
        <%= f.label :shutter_speed, "露光時間", class: "col-sm-4 col-form-label" %>
        <div class="col-sm-8">
          <%= f.text_field :shutter_speed_from, class: "form-control" %>s ~ <%= f.text_field :shutter_speed_to, class: "form-control" %>s
        </div>
      </div>
      
      <div class="text-center mb-4">
        <%= f.submit '検索する', class: 'btn btn-primary btn-lg mr-1' %>
        <%= link_to "キャンセル", :back, class: "btn btn-light btn-lg ml-1" %>
      </div>
    <% end %>
  </div>
</div>